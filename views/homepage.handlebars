<h2>Oh, the places you'll go!</h2>

{{#each blog as |blog|}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2>
        <a href="/blog/{{blog.id}}">{{blog.name}}</a>
      </h2>
      <p>Created by {{blog.user.name}} on {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{blog.description}}
      </p>
    </div>
  </div>
{{/each}}