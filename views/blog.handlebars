{{#each blog as |blog|}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2>
        <a href="#">{{blog.title}}</a>
      </h2>
      <p>Created by {{user.id}} on {{format_date blog.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{blog.description}}
      </p>
    </div>
  </div>
{{/each}}