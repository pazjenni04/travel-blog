<h2 id="blog-title">Blogs</h2>

{{#each blog as |blog|}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2>
        <a href="#">{{blog.title}}</a>
      </h2>
      <p>Created by {{user.id}} on {{format_date blog.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{blog.description}}
      </p>
    </div>
  </div>
{{/each}}

{{#each Comment as |comment|}}
  <div>
    <p>{{comment.content}}</p>
    <p>Date created: {{comment.date_created}}</p>
    <p>{{comment.user_id}}</p>
  </div>
{{/each}}